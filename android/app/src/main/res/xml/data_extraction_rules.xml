<?xml version="1.0" encoding="utf-8"?>
<!-- Backup rules for API 31+ -->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude encrypted shared prefs - they depend on Keystore keys that aren't backed up -->
        <exclude domain="sharedpref" path="AuthStore.xml"/>
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs__.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Exclude encrypted shared prefs - they depend on Keystore keys that aren't backed up -->
        <exclude domain="sharedpref" path="AuthStore.xml"/>
        <exclude domain="sharedpref" path="__androidx_security_crypto_encrypted_prefs__.xml"/>
    </device-transfer>
</data-extraction-rules>
